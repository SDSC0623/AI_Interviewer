<ui:FluentWindow x:Class="AI_Interviewer.Views.Windows.AboutWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:local="clr-namespace:AI_Interviewer.Views.Windows"
                 mc:Ignorable="d"
                 d:DataContext="{d:DesignInstance local:AboutWindow}"
                 Title="用户信息设置"
                 MaxHeight="400"
                 MaxWidth="500"
                 MinHeight="400"
                 MinWidth="500"
                 d:DesignHeight="2000"
                 ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                 ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                 WindowStartupLocation="CenterOwner"
                 ShowInTaskbar="False">
    <ui:FluentWindow.Resources>
        <!--<converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
        <extensions:EnumBindingSource x:Key="EnumBindingSource" EnumType="{x:Type models:TimeUnit}" />-->
    </ui:FluentWindow.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- 应用图标和名称 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <ui:SymbolIcon Symbol="Toolbox28" FontSize="28" Width="40" Height="40" Margin="0,0,10,0" />
            <ui:TextBlock Text="各种工具" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" />
        </StackPanel>

        <!-- 版本信息 -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,20">
            <ui:TextBlock Text="{Binding Version}" FontSize="14" HorizontalAlignment="Center" />
            <ui:TextBlock Text="Copyright © 2026" Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                          HorizontalAlignment="Center" Margin="0,5,0,0" />
        </StackPanel>

        <!-- 描述信息 -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
            <StackPanel>
                <ui:TextBlock Text="应用描述" FontTypography="Subtitle" Margin="0,0,0,5" />
                <ui:TextBlock Text="基于AI技术的智能面试评测系统，集成多模态数据分析、实时语音识别、情绪分析等技术，为求职者提供专业面试训练服务。"
                              TextWrapping="Wrap" Margin="0,0,0,15" />

                <ui:TextBlock Text="开发者" FontTypography="Subtitle" Margin="0,10,0,5" />
                <ui:HyperlinkButton NavigateUri="https://github.com/SDSC0623" Content="SDSC0623"
                                    Foreground="Aqua" Margin="0,0,0,5" FontWeight="SemiBold" />

                <ui:TextBlock Text="反馈与支持" FontTypography="Subtitle" Margin="0,10,0,5" />
                <ui:HyperlinkButton NavigateUri="https://github.com/SDSC0623/Tools" Content="GitHub仓库" />
            </StackPanel>
        </ScrollViewer>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <ui:Button Content="关闭" Appearance="Primary" Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>