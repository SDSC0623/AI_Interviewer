<Page x:Class="AI_Interviewer.Views.Pages.UserInfoPage.UserInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:converters="clr-namespace:AI_Interviewer.Converters"
      xmlns:extensions="clr-namespace:AI_Interviewer.Extensions"
      xmlns:models="clr-namespace:AI_Interviewer.Models"
      xmlns:userInfoPage="clr-namespace:AI_Interviewer.ViewModels.UserInfoPage"
      mc:Ignorable="d"
      d:DesignHeight="2550"
      d:DesignWidth="692"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DataContext="{d:DesignInstance Type=userInfoPage:UserInfoPageViewModel}"
      Title="UserInfoPage">
    <Page.Resources>
        <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <extensions:EnumBindingSource x:Key="GenderEnumBinding" EnumType="{x:Type models:Gender}" />
        <extensions:EnumBindingSource x:Key="JobTypeEnumBinding" EnumType="{x:Type models:JobType}" />
        <extensions:EnumBindingSource x:Key="DegreeEnumBinding" EnumType="{x:Type models:Degree}" />
    </Page.Resources>
    <Grid>
        <ui:DynamicScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- 顶部标题栏 -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- 页面标题 -->
                    <ui:SymbolIcon Grid.Column="0" Symbol="ContactCard24"
                                   Filled="True"
                                   FontSize="24"
                                   Margin="0,0,12,0"
                                   Foreground="#2196F3" />
                    <ui:TextBlock Grid.Column="1" Text="个人简历信息"
                                  FontTypography="Title"
                                  FontSize="24"
                                  FontWeight="Bold" />
                    <!-- 保存简历按钮 -->
                    <ui:Button Grid.Column="2"
                               Margin="0,0,12,0"
                               Padding="10,5"
                               Appearance="Success"
                               Command="{Binding SaveResumeCommand}">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Save24"
                                           FontSize="16"
                                           Margin="0,0,8,0" />
                            <ui:TextBlock Text="保存简历" />
                        </StackPanel>
                    </ui:Button>
                </Grid>

                <!-- 基本信息卡片 -->
                <ui:Border CornerRadius="12"
                           Background="{DynamicResource ControlFillColorDefaultBrush}"
                           BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                           BorderThickness="1"
                           Margin="0,0,0,20"
                           Padding="25">
                    <StackPanel>
                        <!-- 标题 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <ui:SymbolIcon Symbol="Person24"
                                           FontSize="20"
                                           Foreground="#2196F3"
                                           Margin="0,0,10,0" />
                            <ui:TextBlock Text="基本信息"
                                          FontTypography="Subtitle"
                                          FontSize="18"
                                          FontWeight="SemiBold" />
                        </StackPanel>

                        <!-- 表单网格 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- 第一列 -->
                            <StackPanel Grid.Column="0">
                                <!-- 姓名 -->
                                <StackPanel Margin="0,0,0,15">
                                    <ui:TextBlock Text="姓名："
                                                  FontTypography="Caption"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                  Margin="0,0,0,4" />
                                    <ui:TextBox FontSize="14" PlaceholderText="请输入您的姓名"
                                                Text="{Binding Resume.BasicInfo.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>

                                <!-- 年龄 -->
                                <StackPanel Margin="0,0,0,15">
                                    <ui:TextBlock Text="年龄："
                                                  FontTypography="Caption"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                  Margin="0,0,0,4" />
                                    <ui:TextBox
                                        Text="{Binding Resume.BasicInfo.Age, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="请输入年龄"
                                        FontSize="14" />
                                </StackPanel>

                                <!-- 身份证 -->
                                <StackPanel Margin="0,0,0,15">
                                    <ui:TextBlock Text="身份证："
                                                  FontTypography="Caption"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                  Margin="0,0,0,4" />
                                    <ui:TextBox
                                        Text="{Binding Resume.BasicInfo.Location, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="请输入户籍"
                                        FontSize="14" />
                                </StackPanel>
                            </StackPanel>

                            <!-- 第二列 -->
                            <StackPanel Grid.Column="2">
                                <!-- 性别 -->
                                <StackPanel Margin="0,0,0,15">
                                    <ui:TextBlock Text="性别："
                                                  FontTypography="Caption"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                  Margin="0,0,0,4" />
                                    <ComboBox
                                        SelectedValue="{Binding Resume.BasicInfo.Gender, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ItemsSource="{Binding Source={StaticResource GenderEnumBinding}}"
                                        FontSize="14">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <ui:TextBlock
                                                    Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"
                                                    TextAlignment="Left" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </StackPanel>

                                <!-- 电话 -->
                                <StackPanel Margin="0,0,0,15">
                                    <ui:TextBlock Text="电话："
                                                  FontTypography="Caption"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                  Margin="0,0,0,4" />
                                    <ui:TextBox
                                        Text="{Binding Resume.BasicInfo.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="请输入联系电话"
                                        FontSize="14" />
                                </StackPanel>

                                <!-- 民族 -->
                                <StackPanel Margin="0,0,0,15">
                                    <ui:TextBlock Text="民族："
                                                  FontTypography="Caption"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                  Margin="0,0,0,4" />
                                    <ui:TextBox
                                        Text="{Binding Resume.BasicInfo.Ethnicity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="请输入民族"
                                        FontSize="14" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ui:Border>

                <!-- 求职意向卡片 -->
                <Border CornerRadius="12"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        Margin="0,0,0,20"
                        Padding="25">
                    <StackPanel>
                        <!-- 标题 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <ui:SymbolIcon Symbol="Target24"
                                           FontSize="20"
                                           Foreground="#4CAF50"
                                           Margin="0,0,10,0" />
                            <ui:TextBlock Text="求职意向"
                                          FontTypography="Subtitle"
                                          FontSize="18"
                                          FontWeight="SemiBold" />
                        </StackPanel>

                        <!-- 表单网格 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- 第一列 -->
                            <StackPanel Grid.Column="0">
                                <!-- 意向岗位 -->
                                <StackPanel Margin="0,0,0,15">
                                    <ui:TextBlock Text="意向岗位："
                                                  FontTypography="Caption"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                  Margin="0,0,0,4" />
                                    <ui:TextBox
                                        Text="{Binding Resume.JobIntention.TargetPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="例如：软件测试工程师"
                                        FontSize="14" />
                                </StackPanel>

                                <!-- 期望薪水 -->
                                <StackPanel Margin="0,0,0,15">
                                    <ui:TextBlock Text="期望薪水："
                                                  FontTypography="Caption"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                  Margin="0,0,0,4" />
                                    <ui:TextBox
                                        Text="{Binding Resume.JobIntention.ExpectedSalary, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="例如：10000"
                                        FontSize="14">
                                        <!--<ui:TextBox.Suffix>
                                            <ui:TextBlock Text="元/月"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       Margin="8,0,0,0"/>
                                        </ui:TextBox.Suffix>-->
                                    </ui:TextBox>
                                </StackPanel>
                            </StackPanel>

                            <!-- 第二列 -->
                            <StackPanel Grid.Column="2">
                                <!-- 意向城市 -->
                                <StackPanel Margin="0,0,0,15">
                                    <ui:TextBlock Text="意向城市："
                                                  FontTypography="Caption"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                  Margin="0,0,0,4" />
                                    <ui:TextBox
                                        Text="{Binding Resume.JobIntention.TargetCity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="例如：北京"
                                        FontSize="14" />
                                </StackPanel>

                                <!-- 求职类型 -->
                                <StackPanel Margin="0,0,0,15">
                                    <ui:TextBlock Text="求职类型："
                                                  FontTypography="Caption"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                  Margin="0,0,0,4" />
                                    <ComboBox
                                        SelectedValue="{Binding Resume.JobIntention.JobType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ItemsSource="{Binding Source={StaticResource JobTypeEnumBinding}}"
                                        FontSize="14">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <ui:TextBlock
                                                    Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"
                                                    TextAlignment="Left" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 教育经历卡片 -->
                <ui:Border CornerRadius="12"
                           Background="{DynamicResource ControlFillColorDefaultBrush}"
                           BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                           BorderThickness="1"
                           Margin="0,0,0,20"
                           Padding="25">
                    <StackPanel>
                        <!-- 标题和添加按钮 -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Book24"
                                               FontSize="20"
                                               Foreground="#FF9800"
                                               Margin="0,0,10,0" />
                                <ui:TextBlock Text="教育经历"
                                              FontTypography="Subtitle"
                                              FontSize="18"
                                              FontWeight="SemiBold" />
                            </StackPanel>

                            <ui:Button Grid.Column="2"
                                       Content="添加教育经历"
                                       Padding="16,8"
                                       FontSize="14"
                                       Cursor="Hand"
                                       Command="{Binding AddEducationCommand}">
                                <ui:Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="Add24"
                                                           FontSize="16"
                                                           Margin="0,0,6,0" />
                                            <ui:TextBlock Text="添加教育经历" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ui:Button.ContentTemplate>
                            </ui:Button>
                        </Grid>

                        <!-- 教育经历列表 -->
                        <ItemsControl ItemsSource="{Binding Resume.Educations}"
                                      Margin="0,0,0,20"
                                      Grid.IsSharedSizeScope="True">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8"
                                            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            Background="{DynamicResource LayerOnAcrylicFillColorDefaultBrush}"
                                            Margin="0,0,0,12"
                                            Padding="20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- 时间段 -->
                                            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                                        Margin="0,0,0,12">
                                                <ui:TextBlock Text="时间："
                                                              FontTypography="Caption"
                                                              FontSize="12"
                                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                              Margin="0,0,0,4" />
                                                <StackPanel Orientation="Horizontal">
                                                    <DatePicker
                                                        SelectedDate="{Binding StartTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        FontSize="14" />
                                                    <ui:TextBlock Text=" 至 "
                                                                  VerticalAlignment="Center"
                                                                  Margin="8,0,8,0" />
                                                    <DatePicker
                                                        SelectedDate="{Binding EndTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        FontSize="14" />
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- 学校 -->
                                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                                <ui:TextBlock Text="学校："
                                                              FontTypography="Caption"
                                                              FontSize="12"
                                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                              Margin="0,0,0,4" />
                                                <ui:TextBox
                                                    Text="{Binding School, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    FontSize="14" />
                                            </StackPanel>

                                            <!-- 专业 -->
                                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
                                                <ui:TextBlock Text="专业："
                                                              FontTypography="Caption"
                                                              FontSize="12"
                                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                              Margin="0,0,0,4" />
                                                <ui:TextBox
                                                    Text="{Binding Major, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    FontSize="14" />
                                            </StackPanel>

                                            <!-- 学历 -->
                                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="20,0,0,0">
                                                <ui:TextBlock Text="学历："
                                                              FontTypography="Caption"
                                                              FontSize="12"
                                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                              Margin="0,0,0,4" />
                                                <ComboBox
                                                    SelectedValue="{Binding Degree, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    ItemsSource="{Binding Source={StaticResource DegreeEnumBinding}}"
                                                    FontSize="14">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <ui:TextBlock
                                                                Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"
                                                                TextAlignment="Left" />
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>
                                            </StackPanel>

                                            <!-- 删除按钮 -->
                                            <ui:Button Grid.Row="0" Grid.Column="2"
                                                       VerticalAlignment="Top"
                                                       HorizontalAlignment="Right"
                                                       Padding="8"
                                                       Icon="{ui:SymbolIcon Delete24, Filled=True}"
                                                       Appearance="Danger"
                                                       Command="{Binding DataContext.RemoveEducationCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=Page}}"
                                                       CommandParameter="{Binding}">
                                            </ui:Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- 无教育经历提示 -->
                        <ui:Border
                            Visibility="{Binding NoEducations, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="0,10">
                                <ui:SymbolIcon Symbol="Book24"
                                               FontSize="48"
                                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                               Margin="0,0,0,12" />
                                <ui:TextBlock Text="暂无教育经历"
                                              FontSize="16"
                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </ui:Border>
                    </StackPanel>
                </ui:Border>

                <!-- 工作经历卡片 -->
                <ui:Border CornerRadius="12"
                           Background="{DynamicResource ControlFillColorDefaultBrush}"
                           BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                           BorderThickness="1"
                           Margin="0,0,0,20"
                           Padding="25">
                    <StackPanel>
                        <!-- 标题和添加按钮 -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Briefcase24"
                                               FontSize="20"
                                               Foreground="#9C27B0"
                                               Margin="0,0,10,0" />
                                <ui:TextBlock Text="工作经历"
                                              FontTypography="Subtitle"
                                              FontSize="18"
                                              FontWeight="SemiBold" />
                            </StackPanel>

                            <ui:Button Grid.Column="2"
                                       Content="添加工作经历"
                                       Padding="16,8"
                                       FontSize="14"
                                       Cursor="Hand"
                                       Command="{Binding AddWorkExperienceCommand}">
                                <ui:Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <ui:SymbolIcon Symbol="Add24"
                                                           FontSize="16"
                                                           Margin="0,0,6,0" />
                                            <ui:TextBlock Text="添加工作经历" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ui:Button.ContentTemplate>
                            </ui:Button>
                        </Grid>

                        <!-- 工作经历列表 -->
                        <ItemsControl ItemsSource="{Binding Resume.WorkExperiences}"
                                      Margin="0,0,0,20"
                                      Grid.IsSharedSizeScope="True">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:Border CornerRadius="8"
                                               BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                               BorderThickness="1"
                                               Background="{DynamicResource LayerOnAcrylicFillColorDefaultBrush}"
                                               Margin="0,0,0,12"
                                               Padding="20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="20" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- 时间段 -->
                                            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                                        Margin="0,0,0,12">
                                                <ui:TextBlock Text="时间："
                                                              FontTypography="Caption"
                                                              FontSize="12"
                                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                              Margin="0,0,0,4" />
                                                <StackPanel Orientation="Horizontal">
                                                    <DatePicker
                                                        SelectedDate="{Binding StartTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        FontSize="14" />
                                                    <ui:TextBlock Text=" 至 "
                                                                  VerticalAlignment="Center"
                                                                  Margin="8,0,8,0" />
                                                    <DatePicker
                                                        SelectedDate="{Binding EndTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        FontSize="14" />
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- 企业名称和岗位 -->
                                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                                <ui:TextBlock Text="企业名称："
                                                              FontTypography="Caption"
                                                              FontSize="12"
                                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                              Margin="0,0,0,4" />
                                                <ui:TextBox
                                                    Text="{Binding Company, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    FontSize="14" />
                                            </StackPanel>

                                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="10,0,0,0">
                                                <ui:TextBlock Text="岗位："
                                                              FontTypography="Caption"
                                                              FontSize="12"
                                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                              Margin="0,0,0,4" />
                                                <ui:TextBox
                                                    Text="{Binding Position, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    FontSize="14" />
                                            </StackPanel>

                                            <!-- 行业和月薪 -->
                                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,12,10,0">
                                                <ui:TextBlock Text="行业："
                                                              FontTypography="Caption"
                                                              FontSize="12"
                                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                              Margin="0,0,0,4" />
                                                <ui:TextBox
                                                    Text="{Binding Industry, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    FontSize="14" />
                                            </StackPanel>

                                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="10,12,0,0">
                                                <ui:TextBlock Text="月薪：(元/月)"
                                                              FontTypography="Caption"
                                                              FontSize="12"
                                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                              Margin="0,0,0,4" />
                                                <ui:TextBox
                                                    Text="{Binding Salary, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    FontSize="14">
                                                </ui:TextBox>
                                            </StackPanel>

                                            <!-- 删除按钮 -->
                                            <ui:Button Grid.Row="0" Grid.Column="2"
                                                       VerticalAlignment="Top"
                                                       HorizontalAlignment="Right"
                                                       Padding="8"
                                                       Icon="{ui:SymbolIcon Delete24, Filled=True}"
                                                       Appearance="Danger"
                                                       Command="{Binding DataContext.RemoveWorkExperienceCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=Page}}"
                                                       CommandParameter="{Binding}">
                                            </ui:Button>
                                        </Grid>
                                    </ui:Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- 无工作经历提示 -->
                        <ui:Border
                            Visibility="{Binding NoWorkExperiences, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="0,10">
                                <ui:SymbolIcon Symbol="Briefcase24"
                                               FontSize="48"
                                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                               Margin="0,0,0,12" />
                                <ui:TextBlock Text="暂无工作经历"
                                              FontSize="16"
                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </ui:Border>
                    </StackPanel>
                </ui:Border>
            </StackPanel>
        </ui:DynamicScrollViewer>
    </Grid>
</Page>