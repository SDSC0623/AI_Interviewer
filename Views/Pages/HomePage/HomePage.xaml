<Page x:Class="AI_Interviewer.Views.Pages.HomePage.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:homePage="clr-namespace:AI_Interviewer.ViewModels.HomePage"
      mc:Ignorable="d"
      d:DesignHeight="2550"
      d:DesignWidth="692"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DataContext="{d:DesignInstance Type=homePage:HomePageViewModel}"
      Title="HomePage">
    <Grid Margin="42,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- 标题及工具栏 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,16">
                <ui:SymbolIcon Symbol="Home24"
                               Filled="True"
                               FontSize="24"
                               Margin="0,0,12,0"
                               Foreground="#4CAF50" />

                <ui:TextBlock Text="{Binding HomePageTitle}"
                              FontTypography="Title"
                              VerticalAlignment="Center"
                              FontSize="24"
                              Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
            </StackPanel>
        </Grid>

        <!-- 主要内容区域 - 精美设计 -->
        <ui:DynamicScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,0,20">
            <StackPanel>
                <!-- 顶部横幅 -->
                <Border CornerRadius="12"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        Margin="0,0,0,30"
                        Padding="30,25">
                    <StackPanel>
                            <ui:TextBlock Text="🚀"
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <ui:TextBlock Text="# 智能多模态面试评测系统"
                                       FontTypography="Display"
                                       FontSize="28"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       TextAlignment="Center"
                                       Margin="0,0,0,15"/>
                            <ui:TextBlock Text="基于AI技术的智能面试评测系统，集成多模态数据分析、实时语音识别、情绪分析等技术，为求职者提供专业面试训练服务。"
                                       FontTypography="Subtitle"
                                       FontSize="16"
                                       Foreground="#E0E0E0"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       LineHeight="28"/>
                        </StackPanel>
                </Border>

                <!-- 核心特性标题 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <ui:SymbolIcon Symbol="Star24"
                                   Filled="True"
                                   FontSize="20"
                                   Foreground="#FFC107"
                                   Margin="0,0,8,0"/>
                    <ui:TextBlock Text="🚀 核心特性"
                               FontTypography="Title"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                </StackPanel>

                <!-- 多模态智能评测 -->
                <Border CornerRadius="10"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        Padding="25,20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:SymbolIcon Symbol="ArchiveMultiple16"
                                       FontSize="20"
                                       Foreground="#2196F3"
                                       Margin="0,0,10,0"/>
                            <ui:TextBlock Text="多模态智能评测"
                                       FontTypography="Subtitle"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding MultimodalFeatures}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <ui:SymbolIcon Symbol="Checkmark20"
                                                   Foreground="#4CAF50"
                                                   FontSize="16"
                                                   Margin="0,0,12,0"
                                                   VerticalAlignment="Top"/>
                                        <ui:TextBlock Grid.Column="1"
                                                   Text="{Binding}"
                                                   FontTypography="Body"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   TextWrapping="Wrap"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- 智能对话系统 -->
                <Border CornerRadius="10"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        Padding="25,20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:SymbolIcon Symbol="Chat24"
                                       FontSize="20"
                                       Foreground="#9C27B0"
                                       Margin="0,0,10,0"/>
                            <ui:TextBlock Text="智能对话系统"
                                       FontTypography="Subtitle"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding DialogueFeatures}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <ui:SymbolIcon Symbol="Checkmark20"
                                                   Foreground="#4CAF50"
                                                   FontSize="16"
                                                   Margin="0,0,12,0"
                                                   VerticalAlignment="Top"/>
                                        <ui:TextBlock Grid.Column="1"
                                                   Text="{Binding}"
                                                   FontTypography="Body"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   TextWrapping="Wrap"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- 实时反馈报告 -->
                <Border CornerRadius="10"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        Padding="25,20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:SymbolIcon Symbol="DataHistogram24"
                                       FontSize="20"
                                       Foreground="#FF9800"
                                       Margin="0,0,10,0"/>
                            <ui:TextBlock Text="实时反馈报告"
                                       FontTypography="Subtitle"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding ReportFeatures}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <ui:SymbolIcon Symbol="Checkmark20"
                                                   Foreground="#4CAF50"
                                                   FontSize="16"
                                                   Margin="0,0,12,0"
                                                   VerticalAlignment="Top"/>
                                        <ui:TextBlock Grid.Column="1"
                                                   Text="{Binding}"
                                                   FontTypography="Body"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   TextWrapping="Wrap"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- 标语区域 -->
                <Border CornerRadius="12"
                        Background="{DynamicResource SolidBackgroundFillColorTertiaryBrush}"
                        Padding="30,25"
                        Margin="0,20,0,0">
                    <StackPanel>
                        <ui:TextBlock Text="✨ 让AI赋能面试，让求职更加智能！"
                                   FontTypography="Title"
                                   FontSize="20"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <ui:TextBlock Text="开启智能面试新时代"
                                   FontTypography="BodyStrong"
                                   FontSize="16"
                                   Foreground="#E0E0E0"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ui:DynamicScrollViewer>
    </Grid>
</Page>